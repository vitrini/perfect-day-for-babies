<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/vitrini_list_segment_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
	    android:layout_marginTop="15dip"                
	    android:layout_marginBottom="15dip"                
   	    android:layout_marginRight="15dip"                
	    android:layout_marginLeft="14dip"                
		android:clickable="false"
        android:contentDescription="TODO"
        android:focusable="false"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"                
	    android:layout_marginBottom="14dp"                
	    android:layout_marginRight="4dp"                
        android:layout_centerInParent="true"
        android:clickable="false"
        android:focusable="false"
        android:layout_toRightOf="@+id/vitrini_list_segment_image" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_alignParentLeft="true" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="vitrini name"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/segment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="Segmento Vitrini"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
   
			<ImageButton
                android:id="@+id/img_btn_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/icone_pin"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter" />
            
    </RelativeLayout>

</RelativeLayout>